{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.1",
  "permissions": ["storage"],
  "options_page": "popup/options.html",
  "action": {
    "default_popup": "popup/options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["src/main/main.js"],
      "matches": ["https://www.nicovideo.jp/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/main/main.js.map"],
      "matches": ["https://www.nicovideo.jp/*"]
    }
  ],
  "default_locale": "en"
}
